    <script>
        function showContent(contentId) {
            const allSections = ['home-title-section', 'gemini-section'];

            allSections.forEach(sectionId => {
                const element = document.getElementById(sectionId);
                
                if (sectionId === contentId) {
                    element.classList.remove('hidden-content');
                    element.classList.add('visible-content');
                } else {
                    element.classList.remove('visible-content');
                    element.classList.add('hidden-content');
                }
            });
        }

        window.onload = function() {
            showContent('home-title-section'); // 홈 화면을 초기화합니다.
        }
    </script>
</head>

